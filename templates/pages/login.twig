<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>City Guide - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-danger text-white">
    <div style="padding-top: 15rem;" class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <h2 class="text-center mb-4">Login</h2>
                <form id="login-form">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Enter your password">
                    </div>
                    <button type="submit" class="btn btn-light w-100">Login</button>
                </form>
            </div>
            <a class="text-white text-center mt-3" href="/register">Don't have an account?</a>
        </div>
    </div>
    <script>
        const token = localStorage.getItem('access_token');
        if (token) {
            fetch('{{api_host}}/api/token/verify/', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    Authorization: `Bearer ${token}`,
                },
                body: JSON.stringify({ token: token }),
            })
                .then((response) => {
                    if (response.ok) {
                        window.location.href = '/'; // Redirect to home page if the token is valid
                    } else if (response.status === 401) {
                        // If the token is invalid, clear the tokens and stay on the login page
                        console.log('Invalid token, clearing localStorage');
                        localStorage.removeItem('access_token');
                        localStorage.removeItem('refresh_token');
                    }
                })
                .catch((error) => {
                    console.error('Error verifying token:', error);
                    // If there's an error, assume the token is invalid and clear the tokens
                    localStorage.removeItem('access_token');
                    localStorage.removeItem('refresh_token');
                });
        }

        document.getElementById('login-form').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent the form from submitting the traditional way
            const email = document.getElementById('email').value;
            const password = document.getElementById('password').value;

            fetch('{{api_host}}/api/token/', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ username: email, password: password }),
            })
                .then((response) => response.json())
                .then((data) => {
                    console.log(data);
                    if (data.access) {
                        // Store tokens in localStorage
                        localStorage.setItem('access_token', data.access);
                        localStorage.setItem('refresh_token', data.refresh);
                        // Redirect to the index page or any other protected page
                        window.location.href = '/';
                    } else {
                        alert('Login failed! Please check your credentials.');
                    }
                })
                .catch((error) => {
                    console.error('Error:', error);
                    alert('An error occurred. Please try again later.');
                });
        });
    </script>
</body>

</html>
